<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">


	<menuitem name="Customer-menu" title="Axelor App"
		icon="fa-solid fa-user" icon-background="green" />

	<menuitem name="menu-customer-submenu"
		parent="Customer-menu" title="Fill Your Details"
		icon="fas fa-user-plus" icon-background="blue"
		action="customer.all" tag="click here" tag-style="important" />

	<action-view name="customer.all"
		title="Details" model="com.axelor.action.db.Customer">
		<view type="grid" name="customer-grid" />
		<view type="form" name="customer-form" />
		
<!-- view-param -->		
	<view-param name="reload-dotted" value="false"/>
		<view-param name="popup" value="true"/>
		<view-param name="popup-save" value="false"/>
		<view-param name="download" value="true"/>
	</action-view>

<!-- order menu -->	
	<menuitem name="menu-myorder-submenu" parent="Customer-menu"
		title="Create Order" icon="fa-duotone fa-cart-plus"
		icon-background="brown" action="order.all"
		tag-style="info" tag-count="true"/>

	<action-view name="order.all" title="All Orders"
		model="com.axelor.action.db.Order" >
		<view type="grid" name="order-grid" />
		<view type="form" name="order-form" />
		
<!-- view-param -->		
		<view-param name="forceEdit" value="true"/>
		<view-param name="forceTitle" value="true"/>
		<view-param name="showArchived" value="true"/>
		<view-param name="details-view" value="true"/>
		<view-param name="limit" value="2"/>
		<view-param name="popup" value="false"/>
		<view-param name="popup.maximized" value="true"/>
		<view-param name="show-toolbar" value="true"/>
		<view-param name="show-confirm" value="true"/>
		
		<domain>self.orderStatus = :orderStatus </domain>
		 <context name="orderStatus" expr="ordered"/>
		
	</action-view>


</object-views>